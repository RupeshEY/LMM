package gw.assignment.workload.strategies

uses gw.api.assignment.workload.strategies.WorkloadAssignmentStrategyBase

/**
 * Basic strategy for Assignment within a Group of Users based on workload.
 */
@Export
public class UserWorkloadAssignmentStrategy extends WorkloadAssignmentStrategyBase {

  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  // Constructors
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

  public construct() {
    super()
  }


  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  // Public Methods
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  
  public override function fetchWorkload(groupUser : GroupUser) : int {
    // workload in this situation is the absolute workload of the User irrespective of any other factors
    return groupUser.User.TotalUserWorkload
  }

}
