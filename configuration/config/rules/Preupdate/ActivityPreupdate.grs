package rules.Preupdate

@gw.rules.RuleName("Activity Pre-update")
@gw.rules.RuleSetDescription("This is the Activity Preupdate rule set to permit modification of the activity and related entities. Exceptions will cause the bounding database transaction to roll back, effectively vetoing the update.")
class ActivityPreupdate extends gw.rules.RuleSetBase {
  static function invoke(bean : entity.Activity) : gw.rules.ExecutionSession {
    return invoke( new gw.rules.ExecutionSession(), bean )
  }

  static function invoke(exeSession : gw.rules.ExecutionSession, bean : entity.Activity) : gw.rules.ExecutionSession {
    return _invoke( exeSession, bean, "Activity Pre-update", ActivityPreupdate )
  }
}
