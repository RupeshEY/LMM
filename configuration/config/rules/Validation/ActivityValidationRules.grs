package rules.Validation

@gw.rules.RuleName("Activity Validation Rules")
@gw.rules.RuleSetDescription("This is the Activity Validation rule set. These rules can be used to describe complex data requirements that cannot be encoded as required fields, single-field validations, or edit masks.")
class ActivityValidationRules extends gw.rules.RuleSetBase {
  static function invoke(bean : entity.Activity) : gw.rules.ExecutionSession {
    return invoke( new gw.rules.ExecutionSession(), bean )
  }

  static function invoke(exeSession : gw.rules.ExecutionSession, bean : entity.Activity) : gw.rules.ExecutionSession {
    return _invoke( exeSession, bean, "Activity Validation Rules", ActivityValidationRules )
  }
}
