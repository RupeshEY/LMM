<?xml version="1.0"?>
<entity
  xmlns="http://guidewire.com/datamodel"
  desc="Medical action taken related to an exposure."
  entity="MedicalAction"
  exportable="true"
  extendable="true"
  platform="false"
  table="medicalaction"
  type="retireable">
  <implementsInterface
    iface="gw.cc.exposure.entity.MedicalAction"
    impl="com.guidewire.cc.domain.exposure.impl.MedicalActionImpl"/>
  <implementsEntity
    name="Extractable"/>
  <column
    desc="Date of action."
    name="ActionDate"
    nullok="true"
    type="datetime"/>
  <column
    desc="Date of next appointment."
    name="NextAppointment"
    nullok="true"
    type="datetime"/>
  <column
    desc="Additional notes on the action."
    name="Note"
    nullok="true"
    type="shorttext"/>
  <column
    desc="Name of medical provider."
    name="ProviderName"
    nullok="true"
    type="varchar">
    <columnParam
      name="size"
      value="60"/>
  </column>
  <typekey
    desc="Type of medical action required in the future."
    name="FutureActionReq"
    nullok="true"
    typelist="FutureMedicalActionType"/>
  <typekey
    desc="Type of action."
    name="MedicalActionType"
    nullok="true"
    typelist="MedicalActionType"/>
  <foreignkey
    columnName="ExposureID"
    desc="The related exposure."
    fkentity="Exposure"
    name="Exposure"
    nullok="false"/>
</entity>
