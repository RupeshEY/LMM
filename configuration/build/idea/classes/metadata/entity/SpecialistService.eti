<?xml version="1.0"?>
<entity
  xmlns="http://guidewire.com/datamodel"
  desc="A node in the specialist services tree."
  entity="SpecialistService"
  extendable="true"
  final="true"
  loadable="false"
  platform="true"
  table="specialistservice"
  type="retireable">
  <implementsInterface
    iface="com.guidewire.pl.domain.vendormanagement.SpecialistServicePublicMethods"
    impl="com.guidewire.pl.domain.vendormanagement.impl.SpecialistServiceImpl"/>
  <fulldescription><![CDATA[A node in the specialist services tree.]]></fulldescription>
  <column
    desc="Name of the service."
    name="Name"
    nullok="false"
    type="shorttext">
    <localization
      nullok="true"
      tableName="specsvcname_l10n"/>
  </column>
  <column
    desc="Description of the service."
    name="Description"
    nullok="true"
    type="shorttext">
    <localization
      nullok="true"
      tableName="specsvcdesc_l10n"/>
