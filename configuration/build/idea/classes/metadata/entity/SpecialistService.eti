  <column
    desc="Unique string identifying this service."
    name="Code"
    nullok="false"
    type="shorttext"/>
  <column
    default="true"
    desc="Indicates whether the service should be used for new service requests."
    name="Active"
    nullok="false"
    type="bit"/>
  <edgeForeignKey
    desc="Reference to the parent SpecialistService.  Null for top level nodes, which have no parent."
