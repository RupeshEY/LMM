<?xml version="1.0"?>
<database-config
  xmlns="http://guidewire.com/database-config">
  <!-- H2 (meant for demo/quickstart use only!) -->
  <database
    name="ClaimCenterDatabase"
    dbtype="h2">
    <dbcp-connection-pool
      jdbc-url="jdbc:h2:file:/tmp/ootb/guidewire/cc"/>
    <upgrade
      defer-create-nonessential-indexes="false"/>
  </database>

  <database
    name="ClaimCenterDatabase"
    dbtype="h2"
    env="h2mem">
    <dbcp-connection-pool
      jdbc-url="jdbc:h2:mem:/tmp/ootb/guidewire/cc"/>
    <upgrade
      defer-create-nonessential-indexes="false"/>
  </database>

